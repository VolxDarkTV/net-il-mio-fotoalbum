
<h1>Client Page</h1>

<section class="container border border-2 border-danger py-3 px-0">
    <div class="border border-2 border-primary">
        @*<div>
            <input type="text" id="search" class="form-control" placeholder="Search Title" onkeyup="loadPosts(this.value)"/>
        </div>*@


        @*Search Bar*@
        <form action="javascript:" class="search-bar">
            
            <input id="search" type="search" name="search" pattern=".*\S.*" required placeholder="Search Title" onkeyup="loadPosts(this.value)">
            <button class="search-btn" type="submit">
                <span>Search</span>
            </button>
            
        </form>

        <h2>Visualize Images</h2>
        <ul id="y-posts" class="d-flex flex-column gap-3">
                
        </ul>
        
        <div id="no-posts" class="d-none">No Images in DB</div>

    </div>
</section>

@section Scripts {
    <script type="text/javascript" src="~/js/Client/index.js"></script>
}