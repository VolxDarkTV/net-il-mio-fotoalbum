@model ImageClass

<section class="container d-flex flex-column align-items-center gap-3">

    <div>
        <!--Image-->
        <div class="card_image rounded">
            <img class="rounded" src="@Model.Img" alt="Error: @Model.Title">
        </div>
    </div>
    
    <div class="d-flex flex-column align-items-center gap-5">

        <div class="d-flex flex-column align-items-center gap-3 w-100">
            <span class="text-light rounded fw-bold bg-dark px-3 py-2">@Model.Title</span>
            @if(Model.Description != null)
            {
                <span class="text-center fw-light rounded shadow p-3 w-100" style="max-width: 600px;">@Model.Description</span>
            }
        </div>

        <div class="d-flex flex-column align-items-center">
            <span class="fw-bold">Category</span>
            <ul class="p-0 m-0">
                @foreach(Category category in Model.Category)
                {
                    <li class="badge bg-info">
                        @category.Name
                    </li>
                }
            </ul>
        </div>

    </div>
    <div>
        @{
            await Html.RenderPartialAsync("../Message/Index", new ImageFormModel());
        }
    </div>
</section>